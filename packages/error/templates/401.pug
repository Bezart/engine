extends /layouts/main

block append variables
  - let headTitle = t('error.401.title')
  - let layout_header_class = "main__header_center"

block content
  +b.error
    +e('h1').type= t('error.401.title')
    +e.code 401
    +e.text
      if error.description
        != error.description
      else
        != t('error.401.description')